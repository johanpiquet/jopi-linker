{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",

    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "verbatimModuleSyntax": true,
    "allowJs": false,

    "paths": {
      "@/*": ["./src/gen/*"]
    }
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/.turbo",
    "**/.cache",
    "**/.temp"
  ]
}